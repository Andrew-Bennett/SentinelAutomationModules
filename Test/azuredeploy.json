{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PlaybookName": {
            "defaultValue": "ManagedIdTest",
            "type": "String"
        },
        "IdentityType": {
            "defaultValue": "SystemAssigned",
            "type": "string"
        },
        "UserIdentityResourceId": {
            "defaultValue": "ResourceIdOfUserAssignedManagedId",
            "type": "string"
        }
    },
    "variables": {
        "workflowSystemAssignedJson": {
            "type": "SystemAssigned"
        },
        "workflowUserAssignedJson": {
            "type": "UserAssigned",
            "userAssignedIdentities": {
                "[parameters('UserIdentityResourceId')]": {}
            }
        },
        "httpSystemAssignedAuth": {
            "audience": "https://graph.microsoft.com",
            "type": "ManagedServiceIdentity"
        },
        "httpUserAssignedAuth": {
            "audience": "https://graph.microsoft.com",
            "identity": "[parameters('UserIdentityResourceId')]",
            "type": "ManagedServiceIdentity"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('PlaybookName')]",
            "location": "[resourceGroup().location]",
            "identity": "[if(equals(parameters('IdentityType'), 'SystemAssigned'), variables('workflowSystemAssignedJson'), variables('workflowUserAssignedJson'))]",
            "properties": {
                "state": "Disabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "triggers": {
                        "Recurrence": {
                            "recurrence": {
                                "frequency": "Month",
                                "interval": 12
                            },
                            "evaluatedRecurrence": {
                                "frequency": "Month",
                                "interval": 12
                            },
                            "type": "Recurrence"
                        }
                    },
                    "actions": {
                        "Compose": {
                            "runAfter": {},
                            "type": "Compose",
                            "inputs": "[if(equals(parameters('IdentityType'), 'SystemAssigned'), '12345', parameters('UserIdentityResourceId'))]"
                        },
                        "HTTP": {
                            "runAfter": {
                                "Compose": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": "[if(equals(parameters('IdentityType'), 'SystemAssigned'), variables('httpSystemAssignedAuth'), variables('httpUserAssignedAuth'))]",
                                "method": "GET",
                                "retryPolicy": {
                                    "type": "none"
                                },
                                "uri": "https://graph.microsoft.com/v1.0/users/briandel@briandel.com"
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {}
            }
        }
    ]
}
